{
  "manifest_version": 3,
  "name": "Season Color Checker",
  "version": "1.0.0",
  "description": "Filter online clothing stores to show only items matching your seasonal color palette",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "libs/color-thief.min.js",
        "data/seasonal-palettes.js",
        "background/color-processor.js",
        "content/content.js",
        "content/overlay.js",
        "content/eyedropper.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/blob.png",
      "48": "icons/blob.png",
      "128": "icons/blob.png"
    }
  },

  "icons": {
    "16": "icons/blob.png",
    "48": "icons/blob.png",
    "128": "icons/blob.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "content/eyedropper.js",
        "content/eyedropper.css"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
